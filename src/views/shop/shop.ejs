<!--Header section with NavBar-->
<%- include('../components/general/header.ejs') %>
<!--Header section with NavBar end-->
 <main class="main-content container">
    <!--Search-Sidebar section-->
    <aside>
        <section class="filters-wrapper">
            <div class="filter search-section">
                <label class="filter-title" for="search">BUSCAR</label>
                <input class="filter-input-primary" type="text" name="buscar" placeholder="item o categoria">
            </div>
            <div class="filter order-section">
                <div class="filters-responsive">
                    <button class="filter-button">Filtrar <i class="fa-solid fa-sliders fa-sm"></i></button>
                </div>
                <div class=" filter filter-order-responsive">
                    <label class="filter-title" for="order by">ORDENAR POR</label>
                    <select class="filter-input-primary" name="ordenar-por">
                        <option value="" disabled selected hidden>Mayor a menor</option>
                        <option value="price-ascending">Mayor a menor</option>
                        <option value="price-descending">Menor a mayor</option>
                        <option value="alpha-ascending">A-Z</option>
                        <option value="alpha-descending">Z-A</option>
                    </select>
                </div>
            </div>
            <div class="filter price-section">
                <label class="filter-title" for="price">PRECIO</label>
                <form method="post">
                    <span class="filter-option-title">MIN</span>
                    <input class="filter-input-secondary" type="number" placeholder="0" min="0">
                    <span class="filter-option-title">- MAX</span>
                    <input class="filter-input-secondary" type="number" placeholder="0" min="100">
                </form>
            </div>
            <div class="filter checkbox-section">
                <label class="filter-title" for="filter">FILTRAR</label>
                <form class="filter-toggle-container" method="post">
                    <div class="filter-toggle">
                        <input class="filter-checkbox" type="checkbox">
                        <label class="filter-option-title" for="new">NUEVOS</label>
                    </div>
                    <div class="filter-toggle">
                        <input class="filter-checkbox" type="checkbox">
                        <label class="filter-option-title" for="offers">OFERTAS</label>
                    </div>
                    <div class="filter-toggle">
                        <input class="filter-checkbox" type="checkbox">
                        <label class="filter-option-title" for="special-edition">EDICIÓN ESPECIAL</label>
                    </div>
                    <div class="filter-toggle">
                        <input class="filter-checkbox" type="checkbox">
                        <label class="filter-option-title" for="favorites">FAVORITOS</label>
                    </div>
                </form>
            </div>
        </section>
    </aside>
    <!--Search-Sidebar section end-->

    <!--Show cards with pagination-->
    <div class="item-list-wrapper container">
        <section class="item-list">
        <% Object.values(collections).forEach(collection => { %>
            <!--FunkoPop card-->
            <article class="card">
                <a class="card-link" href="#">
                    <figure class="card-image">
                        <span class="card-image-tag">NUEVO</span>
                        <img class="card-image__front" src="<%= collection.image_front %>" alt="<%= collection.product_description %>">
                        <img class="card-image__back" src="<%= collection.image_back %>" alt="<%= collection.product_description %>">
                    </figure>
                    <div class="card-content">
                        <p class="card-content-category"><%= collection.licence.licence_name %></p>
                        <h4 class="card-content-name"><%= collection.product_name %></h4>
                        <p class="card-content-price">&#36; <%= collection.price %></p>
                        <p class="card-content-prom">3 CUOTAS SIN INTERÉS</p>
                    </div>
                </a>
            </article>
        <% }); %>
            
        </section>
        
        <!--Pagination-->
        <section class="pagination">
            <ul class="pagination-list">
                <li class="pagination-item chevron"><a href="/"><i class="fa-solid fa-angle-left"></i></a></li>
                <li class="pagination-item"><a href="/">1</a></li>
                <li class="pagination-item pagination-mid"><a href="/">2</a></li>
                <li class="pagination-item"><a href="/">...</a></li>
                <li class="pagination-item pagination-mid"><a href="/">9</a></li>
                <li class="pagination-item"><a href="/">10</a></li>
                <li class="pagination-item chevron"><a href="/"><i class="fa-solid fa-angle-right"></i></a></li>
            </ul>
        </section>
        <!--Pagination end-->
    </div>
    <!--Show cards with pagination end-->   
</main>



<!--Footer section-->
<%- include('../components/general/footer.ejs') %>
<!--Footer section end-->